<style>
    .hot-tour-card-image {
        width: 100%;
        height: 180px;
    }
</style>

<div class="card col-lg-4">
    <img class="card-img-top hot-tour-card-image" src="@Data.ImageLink" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Data.Name</h5>
        <p class="card-text">@Data.Resort</p>
        <a href="@Data.DetailsLink" class="btn btn-primary">Details</a>
    </div>
</div>

@code {
    [Parameter]
    public HotTourViewModel Data { get; set; }
}
